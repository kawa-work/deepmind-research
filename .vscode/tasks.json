{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Train a mdoel",
            "type": "shell",
            "command": "~/anaconda3/envs/kawakami/bin/python",
            "args": [
                "-m",
                "learning_to_simulate.train",
                "--data_path=/tmp/datasets/WaterRamps",
                "--model_path=/tmp/models/WaterRamps"
            ],
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Generate some trajectory rollouts",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "learning_to_simulate.train",
                "--mode='eval_rollout'",
                "--data_path=/tmp/datasets/WaterRamps",
                "--model_path=/tmp/models/WaterRamps",
                "--output_path=/tmp/rollouts/WaterRamps"
            ]
        }
    ]
}